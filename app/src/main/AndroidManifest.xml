<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Wi-Fi 권한 추가 (PTPIP용) -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- USB 권한 추가 -->
    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <uses-permission
        android:name="android.permission.MANAGE_USB"
        tools:ignore="ProtectedPermissions" />

    <!-- 파일 시스템 접근 권한 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <!-- USB Host 모드 지원 선언 -->
    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />

    <!-- Wi-Fi 기능 지원 선언 (PTPIP용) -->
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />

    <application
        android:name=".CamCon"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CamCon"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ui.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- USB 디바이스 연결 시 앱 실행 -->
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        <activity
            android:name=".presentation.ui.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ui.MainActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout" />
        <activity
            android:name=".presentation.ui.SettingsActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".presentation.ui.PtpipConnectionActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:label="Wi-Fi 카메라 연결" />
    </application>

</manifest>
